############  Colores  #################
rojx='\e[101m'
rojs='\e[41m'
roj='\033[31m'
ro2='\033[91m'

ver='\033[32m'
ver0='\033[1;32m'
ve2='\033[92m'
ve20='\033[1;32m'

ama='\033[33m'
am0='\033[1;33m'

azu='\033[34m'
az0='\033[1;34m'

pur='\033[35m'

cy='\033[36m'
cy0='\033[1;36m'
##---------------
bla='\e[1;97m'
sub='\e[4m'
fos='\e[5m'

fin='\e[0m'
########     Fin Colores ##############----
 #                                                       /dev/null 2>&1 &

###### Fecha  &  Hora   ######
rdias="$(date +%A)"
mes="$(date +%B)"
diaf="$(date +%e)"
ttime="$(date +'%I:%M')"
ye="$(date +%Y)"
###### fin fecha ##############


bban1 () {
clear
echo ""
echo ""
toilet -f pagga descargas
toilet -f future --metal youtube.mp3
echo ""
echo ""

}









selecc () {
clear

echo "   $azu

██▄   ▄███▄     ▄▄▄▄▄   ▄█▄    ██   █▄▄▄▄   ▄▀  ██      ▄▄▄▄▄   
█  █  █▀   ▀   █     ▀▄ █▀ ▀▄  █ █  █  ▄▀ ▄▀    █ █    █     ▀▄ 
█   █ ██▄▄   ▄  ▀▀▀▀▄   █   ▀  █▄▄█ █▀▀▌  █ ▀▄  █▄▄█ ▄  ▀▀▀▀▄   
█  █  █▄   ▄▀ ▀▄▄▄▄▀    █▄  ▄▀ █  █ █  █  █   █ █  █  ▀▄▄▄▄▀    
███▀  ▀███▀\e[0m_ $azu           ▀███▀     █   █    ███     █            
         $fin  │  $azu                   █   ▀            █ $fin|────────┐   
           │                   _$azu▀                ▀ $fin          │
           │                   │                             │                 
           │                   │                             │ 
           │                   │            $bla   _ _          .│___      _                _  _  $fin
           │                   │       $bla       | | | ___  _ _ \e[101m|_ _|_ _ | |_  ___ $fin ___  _| || |     $fin
           │                   │       $bla       \   // . \| | |\e[101m | || | || . \/ ._>$fin|___|/ . || |  $fin 
           │                   │       $bla        |_| \___/*___|\e[101m |_|*___||___/\___.$fin     \___||_|  $fin
           │                   │                             │
           │       \e[4;5;31m v $fin< [ ᐯ丨ᗪ乇ㄖ丂 ]                       │
           │                                                 │
           │                                                 │
           └────────────────────[ 爪卩3 ] >\e[4;5;31m m $fin               │                   
                                                             │
                                                             │
                                                             │
                                                     [ ㄥ丨丂ㄒ卂.爪卩3 ] >\e[4;5;31m l $fin                      
                                                                                                                                                                
                                                                      "                                                                                  
                                                                                  


echo -n " ==================================?> "
read RESP
case $RESP in
	m ) sleep 1; clear; mmpp;;
	l ) sleep 1; clear; list;;
	v ) sleep 1; clear; vids;;
	0 ) sleep 1; clear; exit;;
	* ) sleep 1; echo "[1;34m
 Opción incorrecta";sleep 1; bban1; selecc;;
esac
}



mmpp () {
echo "


______
8::888                                                
8    8 eeee eeeee eeee eeeee eeeee  eeeee eeeee eeeee 
8e   8 8    8   ! 8  8 8   8 8   8  8   8 8   8 8   * 
88   8 8eee 8eeee 8e   8eee8 8eee8e 8e    8eee8 8eeee 
88   8 88      88 88   88  8 88   8 88 *8 88  8    88 
88eee8 88ee 8ee88 88e8 88  8 88   8 88ee8 88  8 8ee88 
                                                      
                  8**8**8       eeee                  
                  8  8  8 eeeee    8                  
                  8e 8  8 8   8    8                  
                  88 8  8 8eee8 eee8                  
                  88 8  8 88       88                 
                  88 8  8 88    eee88                 
                                                      

             Pega Tu Link "
echo "     └────────────────────"
echo -n  " └──────────────────── >>>>>>>>> " 
read dees
echo ""

echo "#################################"
echo "#################################"
echo "#################################"
echo "#################################"
#read -p " Guardar como: " kof
n0m=$(zenity --title="☠ GЦΛЯDΛЯ ᄃӨMӨ ☠"  --entry --width 600)

rutt=$(zenity  --file-selection --title="Selecciona Caperta para Guardar:::" --directory)

cd
mkdir .mux
cd .mux
clear
echo ""
echo "


·▄▄▄▄  ▄▄▄ ..▄▄ ·  ▄▄·  ▄▄▄·  ▄▄ •  ▄▄▄·  ▐ ▄ ·▄▄▄▄                 
██▪ ██ ▀▄.▀·▐█ ▀. ▐█ ▌▪▐█ ▀█ ▐█ ▀ ▪▐█ ▀█ •█▌▐███▪ ██ ▪              
▐█· ▐█▌▐▀▀▪▄▄▀▀▀█▄██ ▄▄▄█▀▀█ ▄█ ▀█▄▄█▀▀█ ▐█▐▐▌▐█· ▐█▌ ▄█▀▄          
██. ██ ▐█▄▄▌▐█▄▪▐█▐███▌▐█ ▪▐▌▐█▄▪▐█▐█ ▪▐▌██▐█▌██. ██ ▐█▌.▐▌         
▀▀▀▀▀•  ▀▀▀  ▀▀▀▀ ·▀▀▀  ▀  ▀ ·▀▀▀▀  ▀  ▀ ▀▀ █▪▀▀▀▀▀•  ▀█▄▀▪ ▀  ▀  ▀ 
                                                     

"
#toilet -f emboss2 --metal --filter border Descargando..#
echo "
"

youtube-dl --extract-audio --audio-format mp3  $dees
#youtube-dl --extract-audio --audio-format mp3 --yes-playlist $dees
echo ""
mv *.mp3 "$n0m.mp3"
mv *.mp3 $rutt
cd ..
rm -r .mux
echo "#### El Archivo Mp3 se Descargo a: ( $rutt ) #### "
echo ""
echo ""
echo  "   ...Hora: $time
              Hoy:  $dias-$diaf/$mes/$ye "
echo ""
echo ""
}



