list () {
echo "



  _     _     _                     
 | |   (_)___| |_ __ _              
 | |   | / __| __/ _° |             
 | |___| \__ \ || (_| |             
 |_____|_|___/\__\__,_|       _____ 
               _ __ ___  _ __|___ / 
              | °_ ° _ \| *_ \ |_ \ 
             _| | | | | | |_) |__) |
            (_)_| |_| |_| .__/____/ 
                        |_|         




"
echo "             Pega Tu Link "
echo "     └────────────────────"
echo -n  " └──────────────────── >>>>>>>>> " 
read deesx
echo ""

echo "#################################"
echo "#################################"
echo "#################################"
echo "#################################"
#read -p " Guardar como: " kof
#n0m=$(zenity --title="☠ GЦΛЯDΛЯ ᄃӨMӨ ☠"  --entry --width 600)

rutt=$(zenity  --file-selection --title="Selecciona/Crea Caperta para Guardar Lista.mp3:::" --directory)

#cd
#mkdir .mux
#cd .mux
clear
echo ""
echo ""
toilet -f emboss2 --metal --filter border Descargando:::Lista:::.#
echo "
"
cd $rutt
#youtube-dl --extract-audio --audio-format mp3  $deesx
youtube-dl --extract-audio --audio-format mp3 --yes-playlist $deesx
echo ""
#mv *.mp3 "$n0m.mp3"
#mv *.mp3 $rutt
#cd ..
#rm -r .mux
echo "#### El Archivo Mp3 se Descargo a: ( $rutt ) #### "
echo ""
echo ""
echo  "   ...Hora: $ttime
              Hoy:  $dias-$diaf/$mes/$ye "
echo ""
echo ""




}
 lista_notas () {
  youtube-dl -c --title -f best --batch-file lixta
