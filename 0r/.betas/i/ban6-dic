dias="$(date +%A)"
mes="$(date +%B)"
diaf="$(date +%e)"
timme="$(date +'%I:%M')"
ye="$(date +%Y)"
k4="$(sh /xg/0r/.betas/i/pm-am)"
#---------
k44="$(sh /xg/0r/.betas/i/pm-am2)"

####### red #######
int3=`netstat -r | grep "default" | awk {'print $8'}`
ipp="$(curl ifconfig.co)"
ip="$(ip route show|grep ' src ' |cut -d' ' -f9)"
# ipx=$(hostname -I)
rou="$(ip route show|grep ' dhcp '|cut -d' ' -f3)"

clear
