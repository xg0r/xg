#! /bin/bash/
############  Colores  #################
rojx='\e[101m'
rojs='\e[41m'
roj='\033[1;31m'
ro2='\033[91m'

ver='\033[32m'
ver0='\033[1;32m'
ve2='\033[92m'
ve20='\033[1;32m'

ama='\033[33m'
am0='\033[1;33m'

azu='\033[34m'
az0='\033[1;34m'

pur='\033[35m'

cy='\033[36m'
cy0='\033[1;36m'
##---------------
sub='\e[1;4m'
fos='\e[5m'
gri='\e[2m'

fin='\e[0m'
########     Fin Colores ##############----

mem1="$(free -h | sed -n '2p'|cut -d' ' -f11)"
mem2="$(free -h | sed -n '2p'|cut -d' ' -f18)"
mem3="$(free -h | sed -n '2p'|cut -d' ' -f25)"
mem4="$(free -h | sed -n '2p'|cut -d' ' -f39)"
#
dd1="$(df -h | sed -n '4p'|cut -d' ' -f9)"
dd2="$(df -h | sed -n '4p'|cut -d' ' -f12)"
dd3="$(df -h | sed -n '4p'|cut -d' ' -f14)"
dd4="$(df -h | sed -n '4p'|cut -d' ' -f16)"


#h0r4="$(sh /xg/0r/.betas/i/banhora)"
date +'%I:%M'|toilet -f future >> lol
t1="$(sed -n 1p lol)"
t2="$(sed -n 2p lol)"
t3="$(sed -n 3p lol)"
rm -f lol


c00l="$(sh /xg/0r/.betas/i/color)"
#------------------------------------------------------------

#########   Fechas/hora   ############
#diasem="$(date +%A)"
diasem="$(sh /xg/0r/.betas/i/dias)"
mes="$(date +%B)"
diafech="$(date +%e)"
timme="$(date +'%I:%M')"
#timme="$(date +'%I:%M'|toilet -f future)"
ye="$(date +%Y)"
######################################
## Variables Especiales de Entrada
lika1="$(uname -v|cut -d' ' -f3-5)"

lika2="$(uname -o)"

lika3="$(uname -m)"
#-------------------------------------------
clear
 echo "


$ver

┏━━━┓╋╋╋╋╋╋╋╋╋╋╋╋╋╋╋┏┓
┃┏━┓┃╋╋╋╋╋╋╋╋╋╋╋╋╋╋╋┃┃
┃┃╋┗╋━━┳━┳━━┳━━┳━┓┏━┛┣━━┓
┃┃╋┏┫┏┓┃┏┫┏┓┃┏┓┃┏┓┫┏┓┃┏┓┃
┃┗━┛┃┏┓┃┃┃┗┛┃┏┓┃┃┃┃┗┛┃┗┛┣┳┳┓
┗━━━┻┛┗┻┛┗━┓┣┛┗┻┛┗┻━━┻━━┻┻┻┛
╋╋╋╋╋╋╋╋╋┏━┛┃
╋╋╋╋╋╋╋╋╋┗━━┛
 
                           $ama    

        Ｔｅｒｍｉｎａｌ ｜ Ｌｉｎｕｘ
$fin

 [$roj$lika1 > $lika2-$lika3$fin]
"
sleep 1s
########################### ip/red ####################
#ipp="$(curl ifconfig.co)" > /dev/null 2>&1
ipp="$(curl ifconfig.me)" > /dev/null 2>&1
ip="$(ip route show|grep ' src ' |cut -d' ' -f9)"
ant3=`netstat -r | grep "default" | awk {'print $8'}`
nomred="$(nmcli c|sed -n '2p'|cut -d' ' -f1)"
#ipx=$(hostname -I)
routt="$(ip route show|grep ' dhcp '|cut -d' ' -f3)"
#
temxm=$(touch tem && curl wttr.in/Morelia,Mexico?lang=es|sed -n '3p'|cut -d' ' -f14-19 > tem && cat tem && rm -f tem) > /dev/null 2>&1
#
#temm=$(touch tem && curl wttr.in/Morelia,Mexico?0|sed -n '4p'|cut -d' ' -f13-14 > tem && cat tem && rm -f tem)
#temm=$(touch tem && curl wttr.in/Morelia,Mexico?0|sed -n '4p'|cut -d' ' -f10-11 > tem && cat tem && rm -f tem)
temm=$(touch tem && curl wttr.in/Morelia,Mexico?0|sed -n '4p'|cut -d' ' -f9-14 > tem && cat tem && rm -f tem) > /dev/null 2>&1

c0mp=$(touch te && whois $ipp|sed -n '19p'|cut -d' ' -f8-14 > te && cat te && rm -f te) > /dev/null 2>&1

#####################################
#read varr
k44="$(sh /xg/0r/.betas/i/pm-am2)"
clear

echo "   [$roj$ant3$fin]
 ┌─────┘    ┌───$amaɴᴏᴍʙʀᴇ ᴅᴇ ʟᴀ ʀᴇᴅ$fin
$ama Iₙₜₑᵣfₐcₑ $fin └─────┤$roj$nomred$fin
$ama dₑ Cₒₙₑxᵢₒₙ   $fin   █▄▄██████████████████▄        ┌─────||
                ▄██████████████████████▄    ┌──$ama𝙄𝙋 Ðêl Rðµ†êr $fin
              █ █████████████████████████   └─────┤$ro2$routt$fin
           ▄▄▀ ███████████████████████████      │ $c0mp
         ▄▀     ▀█████████████████████████▄     │    
        ▄▀        ▀▄██ █████████████████████▄   ├──\033[1;33mIP PЦBᄂIᄃΛ$fin
      ██          ▀███▄▄ ▀█████████████████████▄└───┐ └───┤\033[91m$ipp$fin
     ████           ▀████▄███████████████▀▀█▀███▀ \033[1;33mIP PЯIVΛDΛ$fin
     ████             ▀█████▀██████▀▀▀▀  ▄▄█▀ █    └──┤\033[91m$ip$fin
      ▀███▄            ▀██▀▄  █▀        ███ ▄▀ 
        ▄███ ▄█▄         ███▐ ██▄      █████  
       ██████████▄▄▄   ▄███  ▌ ███▄   ████▀  
        █████████████▄████   ▐  ███▄▄█▀    
      █ █████████████████     ▌  ██████▌  
      ▀▄  ███████████████ ▄▀  ▀ ▌███████ 
       ▀▄▄   ▄▄▄▀█████████▄▄▄▄█ █ ██████▌$roj :::ΉӨЯΛ::: $fin
     ▄▀   ▀▀▀   ▌ ▄ ▀▀███████████▌██████▀ ┌─┘
     ▀▄ ▄▄▀▄     ▀ ▐ ▀▄ ▀▀▀▀▀▀▀▀▀█▐▀▀    $c00l$t1$fin
       ▀  █            ▐▀▐▀▄▐ ▌▌▐ ▄▐     $c00l$t2$fin
     ████▀                        ▌      $c00l$t3$k44$fin
    ██████▄                      ▐ ┌──┘
   ▀████████▄ ▐▌ ▌               ▌ ├─$c00l$diasem$fin🔹\033[1;33m$diafech$fin
     ▀▀███████ ▀▄  ▄▄   ▐      ▄▐  └─┤∂є $ro2$mes$fin ∂єℓ $cy0$ye$fin  
         ▀█████▄▄▄   ▀▀▀ ▄▄  ▐▌ ▌    
           ███▀▀▄█████▄▄▄▄ ▀▀████$roj ᴍᴏʀᴇʟɪᴀ,MX$fin
\033[1;33mMɆ₥ØⱤł₳ $fin    ▀▀█▄█▀▀████████████▀    └┤$temm $temxm  
